@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">Upload Excel</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="inputExcel" class="form-label">Select Excel File:</label>
                            <input class="form-control-file" type="file" id="inputExcel" accept=".xlsx, .xls" />
                        </div>
                        <div class="col-sm-6">
                            <button class="btn btn-primary" onclick="showData()">Show Data</button>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tbData" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-end">
                            <button class="btn btn-success" onclick="sendData()">Send Data to DB</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        function showData() {
            const input = document.getElementById("inputExcel");

            const formData = new FormData();

            formData.append("ExcelFile", input.files[0]);

            fetch("Home/ShowData", {
                method: "POST",
                body: formData,
            })
                .then((response) => response.json())
                .then((dataJson) => {
                    const tbody = document.getElementById("tbData").getElementsByTagName("tbody")[0];
                    tbody.innerHTML = ""; // Önceki verileri temizle

                    dataJson.forEach((item) => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${item.name}</td>
                            <td>${item.surname}</td>
                            <td>${item.tel}</td>
                            <td>${item.mail}</td>
                        `;
                        tbody.appendChild(row);
                    });
                });
        }


        function sendData() {
            const input = document.getElementById("inputExcel")

            const formData = new FormData()

            formData.append("ExcelFile", input.files[0])

            fetch("Home/SendData", {
                method: "POST",
                body: formData
            })
                .then((response) => { return response.json() })
                .then((dataJson) => {

                    alert(dataJson.message);

                })


        }

    </script>
}
